  <style>
    :root {
      --primary: #1f8a70;
      --light: #f4f4f4;
      --white: #fff;
      --gray: #777;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', sans-serif;
      background: var(--light);
      color: #333;
      display: flex;
      min-height: 100vh;
    }

    aside {
      width: 220px;
      background: var(--primary);
      color: var(--white);
      padding: 20px;
      display: flex;
      flex-direction: column;
    }

    aside h2 {
      font-size: 22px;
      margin-bottom: 30px;
    }

    nav a {
      color: var(--white);
      text-decoration: none;
      margin-bottom: 15px;
      font-weight: 600;
      display: block;
      padding: 10px;
      border-radius: 8px;
      transition: background 0.3s;
    }

    nav a:hover {
      background: rgba(255,255,255,0.15);
    }

    main {
      flex: 1;
      padding: 30px;
    }

    .cards {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
      margin-bottom: 40px;
    }

    .card {
      flex: 1;
      min-width: 250px;
      background: var(--white);
      padding: 20px;
      border-radius: 16px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      text-align: center;
    }

    .card h3 {
      margin-bottom: 10px;
      color: var(--primary);
    }

    .calendar {
      background: var(--white);
      padding: 20px;
      border-radius: 16px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

    .calendar h3 {
      color: var(--primary);
      margin-bottom: 20px;
    }

    .calendar-table {
      width: 100%;
      border-collapse: collapse;
    }

    .calendar-table th, .calendar-table td {
      padding: 10px;
      border: 1px solid #ccc;
      text-align: center;
    }

    .calendar-table th {
      background: var(--light);
    }

    footer {
      margin-top: 40px;
      padding: 20px;
      text-align: center;
      background: #222;
      color: var(--white);
    }

    @media (max-width: 768px) {
      body {
        flex-direction: column;
      }

      aside {
        width: 100%;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-around;
      }

      nav a {
        margin: 5px;
      }

      main {
        padding: 20px;
      }
    }
  </style>
</head>
